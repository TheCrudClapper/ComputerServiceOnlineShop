
@model List<User>;

<div class="container">
    <p class="mt-3 fw-bold">Displaying all users<p/>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>LastName</th>
                <th>PhoneNumber</th>
                <th>Place</th>
                <th>HouseNumber</th>
                <th>Country</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.Surname</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Address.Place</td>
                    <td>@item.Address.HouseNumber</td>
                    <td>@item.Address.Country.CountryName</td>
                </tr>
                }
        </tbody>
    </table>
</div>
