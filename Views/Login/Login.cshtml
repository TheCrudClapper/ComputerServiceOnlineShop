@{
    ViewData["Title"] = "Login";
}
@section Styles {
    <link rel="stylesheet" href="~/css/registration-style.css" asp-append-version="true" />
}
<div class="container login-page-container">
    <div class="text-center mb-3 midesection-style ms-1 me-1 shadow">
        <i class="fa-solid fa-store fa-10x"></i> <br />
        <h1 class="fw-bold">Marketplace</h1>
        <h6>Place for your electronics</h6>
    </div>
    <h3 class="fw-bold ms-1">Login</h3>
    <form>
        <div class="row midesection-style shadow p-3 mb-3 ms-1 me-1">
            <div class="col-12 col-md-6">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="text" class="form-control">
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control">
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-outline-light w-50">Login</button>
            </div>
        </div>
    </form>
</div>