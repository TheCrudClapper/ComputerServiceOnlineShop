@using ComputerServiceOnlineShop.ViewModels
@using ComputerServiceOnlineShop.ViewModels.IndexPageViewModel
@{
    ViewData["Title"] = "Home Page";
    @model MainPageViewModel
}
@section Styles {
    <link rel="stylesheet" href="~/css/index-styles.css" asp-append-version="true" />
}
<div class="container-fluid">
    <div id="carouselExampleCaptions" class="carousel slide">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/nvidia_gpu.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h2 class="display-1">Place for used pc parts</h2>
                    <p>Unite with other IT enthusiasts and buy components in decent prices !</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/monitor.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block ">
                    <h2 class="display-1">New Monitor ?</h2>
                    <p>We got a lot of used monitors just for you</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/rig.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption d-none d-md-block">
                    <h2 class="display-1">Dream PC at your reach !</h2>
                    <p>Workstation ? Gaming PC ? In our shop you can find those - without going bankrupt !</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="container offers-container bg-white rounded">
        <div class="row mt-3">
            <div class="col-sm-12 mt-2">
                <p class="fw-bold fs-4">Freshly added:</p>
            </div>
        </div>
        <div class="row mt-2">
            @await Html.PartialAsync("_FreshlyAddedOffersPartial", Model.Cards)
        </div>
    </div>
    <div class="container offers-container bg-white rounded">
        <div class="row mt-3">
            <div class="col-sm-12 mt-2">
                <p class="fw-bold fs-4">Opti Pc Recommends:</p>
            </div>
        </div>
        <div class="row mt-2">
            @for (int i = 0; i < 6; i++)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-2 mb-4">
                    <div class="card">
                        <img src="~/images/ram.png" class="card-img-top" alt="ram-image">
                        <div class="card-body text-start">
                            <h5 class="card-title item-price">150 PLN</h5>
                            <h6 class="card-title item-name">RAM DDR4 3200Mhz 16GB</h6>
                            <p>
                                @for (int j = 0; j < 5; j++)
                                {
                                    <i class="fa fa-star" aria-hidden="true"></i>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="container offers-container bg-white rounded">
        <div class="row mt-3">
            <div class="col-sm-12 mt-2">
                <p class="fw-bold fs-4">Best In CASE Cateogory:</p>
            </div>
        </div>
        <div class="row mt-2">
            @for (int i = 0; i < 6; i++)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-2 mb-4">
                    <div class="card">
                        <img src="~/images/pc_case.jpg" class="card-img-top" alt="ram-image">
                        <div class="card-body text-start">
                            <h5 class="card-title item-price">250 PLN</h5>
                            <h6 class="card-title item-name">Shadow X2 Savio</h6>
                            <p>
                                @{
                                    int starsAmount = new Random().Next(1, 6);
                                    for (int j = 0; j < starsAmount; j++)
                                    {

                                        <i class="fa fa-star" aria-hidden="true"></i>

                                    }
                                }
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

