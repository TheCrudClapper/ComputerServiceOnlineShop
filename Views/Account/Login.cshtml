@using ComputerServiceOnlineShop.ViewModels.AccountViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
@section Styles {
    <link rel="stylesheet" href="~/css/registration-style.css" asp-append-version="true" />
}

<div class="container login-page-container">
    <div class="text-center mb-3 midesection-style ms-1 me-1 shadow">
        <i class="fa-solid fa-store fa-10x"></i> <br />
        <h1 class="fw-bold">Marketplace</h1>
        <h6>Place for your electronics</h6>
    </div>
    <h3 class="fw-bold ms-1">Login</h3>
    <form asp-action="Login" method="post" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]">
        <div class="row midesection-style shadow p-3 mb-3 ms-1 me-1">
            <div class="col-12 col-md-6">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for= "Email" type="text" class="form-control">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <!-- Displaying errors -->
                <div class="col-12 text-center">
                    <div class="mb-3">
                    <span class="text-danger">@Html.ValidationMessage("Login")</span>
                    </div>
                </div>
                <a href="" class="text-dark fw-bold">Forgot password ?</a>
        </div>
        
        <div class="row mt-3">
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-outline-dark btn-dark text-white w-50">Login</button>
            </div>
        </div>
        
    </form>
</div>